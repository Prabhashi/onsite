<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tjr.onsite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".app.OnsiteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.common.IssuesActivity" />
        <activity android:name=".ui.common.IssueHomeActivity" />
        <activity
            android:name=".ui.common.SignUpActivity"
            android:label="Create an account free!" />
        <activity
            android:name=".ui.common.ViewProjectActivity"
            android:label="Projects involved" />
        <activity
            android:name=".ui.common.CreateProjectActivity"
            android:label="Create new project" />
        <activity
            android:name=".ui.common.DashBoardActivity"
            android:label="Manage your projects" />
        <activity
            android:name=".ui.manager.UpdateTaskActivity"
            android:label="Update Task" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_api" />

        <activity
            android:name=".ui.common.BarChartActivity"
            android:label="Task Graph" />
        <activity android:name=".ui.common.ImageViewerActivity" />
        <activity android:name=".ui.common.LocationSelectorActivity" />
        <activity android:name=".ui.common.UserHomeActivity"  android:label="Profile"/>
        <activity
            android:name=".ui.common.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.manager.PlanUploadActivity"
            android:label="Plan Upload" />
        <activity
            android:name=".ui.common.GenerateReportActivity"
            android:label="Report Generate" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.contractor.ContractorViewIssuesActivity"
            android:label="Issues" />
        <activity android:name=".ui.contractor.ContractorViewTaskActivity" />
        <activity
            android:name=".ui.common.ViewTasksActivity"
            android:label="Tasks" />
        <activity
            android:name=".ui.manager.AddTaskActivity"
            android:label="New Task" />
        <activity
            android:name=".ui.common.ResetPasswordActivity"
            android:label="Password Reset" />
        <activity android:name=".ui.common.SelectUserActivity"></activity>
        <activity android:name=".ui.common.ClientIssueReport"></activity>
        <activity android:name=".ui.common.MessageActivity"></activity>
    </application>

</manifest>