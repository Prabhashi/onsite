<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TableRow>

                <TextView
                    android:id="@+id/txt_message_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="16"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip"
                    android:text="Manager : Tharindu"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_height="1px"
                android:background="#000000" />

            <TextView
                android:id="@+id/txt_message_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:text="Hi. What's the progress of my project"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_height="1px"
                android:background="#000000" />

            <TableRow>

                <TextView
                    android:id="@+id/txt_message_timestamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:paddingBottom="2dip"
                    android:paddingTop="6dip"
                    android:text="22/12/2012 12:12:30"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>