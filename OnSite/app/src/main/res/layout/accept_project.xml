<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/accept_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:text="Project Name     :" />

                    <TextView
                        android:id="@+id/proName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:padding="3dp"
                        android:text="Hoghway Extension"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_height="1px"
                    android:background="#000000" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:text="Company Name :" />

                    <TextView
                        android:id="@+id/comName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:padding="3dp"
                        android:text="Access Project"
                        android:textColor="@color/colorAccent" />
                </TableRow>

                <View
                    android:layout_height="1px"
                    android:background="#000000" />

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:padding="3dp"
                        android:text="Assigned By        :" />

                    <TextView
                        android:id="@+id/assigneeId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="16"
                        android:padding="3dp"
                        android:paddingBottom="2dip"
                        android:text="Access Project"
                        android:textColor="@color/colorAccent" />
                </TableRow>

                <View
                    android:layout_height="1px"
                    android:background="#000000" />

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/txt_projectaccept_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Do you wish to accept ?"
                        android:textSize="@dimen/large_text" />
                </TableRow>


            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:weightSum="2">

            <LinearLayout

                android:id="@+id/layout_listprojectapproval_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/thin_border"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_tick"
                    android:tint="#00ff00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Yes"
                    android:textColor="#00ff00"
                    android:textSize="@dimen/large_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_listprojectapproval_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/thin_border"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_cross"
                    android:tint="#ff0000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="No"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/large_text" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>