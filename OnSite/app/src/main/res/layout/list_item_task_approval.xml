<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp">
    <TableLayout
        android:id="@+id/root"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:text="Task Name"
            android:padding="5dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/txt_contractor_approval_taskname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:text="Hoghway Extension"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_vertical"/>
    </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:text="Project Name"
                android:padding="5dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txt_contractor_approval_projectname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:paddingBottom="2dip"
                android:text="Access Project"
                android:textColor="@color/colorAccent"
                android:padding="5dp"
                android:gravity="center_vertical"/>
        </TableRow>
        <TableRow
            android:padding="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/album1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Isuru Nuwan Assigned you"
                android:gravity="center_vertical"
                android:id="@+id/txt_listtaskapproval_managername" />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Do you wish to accept ?"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="1"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/thin_border"
                android:padding="10dp"
                android:id="@+id/layout_listtaskapproval_yes">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_tick"
                    android:tint="#00ff00"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textColor="#00ff00"
                    android:textSize="@dimen/large_text"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/thin_border"
                android:padding="10dp"
                android:id="@+id/layout_listtaskapproval_no">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_cross"
                    android:tint="#ff0000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/large_text"
                    android:gravity="left"/>
            </LinearLayout>
        </TableRow>
</TableLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>