<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"

    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_issue_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#eeeeee"
    tools:context="com.example.tjr.onsite.ui.common.IssueHomeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_issue_home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broken window at roadside wall"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/large_text"
                android:textStyle="bold"
                android:layout_weight="1"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_margin="2px"
                    android:background="#333333"></View>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:text="[Issue]"
                android:textSize="16dp"
                android:layout_weight="3"
                />
            </LinearLayout>
            <ImageView
                android:id="@+id/im_switch_issue_home_image"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_issue_home_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20/02/2016"
                    android:textAlignment="center" />
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_margin="2px"
                    android:background="#333333"></View>

                <TextView
                    android:id="@+id/txt_issue_home_severity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="High"
                    android:textAlignment="center" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_margin="2px"
                    android:background="#333333"></View>


                <ImageView
                    android:id="@+id/im_issue_home_resolved"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:tint="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Location"
            />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/noloc"
                android:id="@+id/img_issue_home_map" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/large_text"/>
            <TextView
                android:id="@+id/txt_issue_home_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="Found this broken window at the entrance of the building. Needs to be fixed soon" />

            <TableLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/large_text"
                        android:text="Reporter" />
                </TableRow>

                <TableRow>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/im_issue_home_reporter_image"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"

                        android:src="@drawable/album2" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:id="@+id/txt_issue_home_reporter_name"
                        android:text="Reporter Name" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/large_text"
                        android:text="Assignee" />
                </TableRow>
                <TableRow>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/im_issue_home_assignee_image"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/album2" />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:id="@+id/txt_issue_home_assignee_name"
                        android:text="Unassigned" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_issues_tags"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Tags :"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="Comments" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_issue_home_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>
            <!--line breaker-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="2px"
                android:background="#333333"></View>
            <EditText
                android:id="@+id/txt_issue_home_comment_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:minLines="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Add Comment"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:id="@+id/btn_issue_home_add_comment"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>
