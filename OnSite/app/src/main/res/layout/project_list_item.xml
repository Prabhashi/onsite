<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp">

        <RelativeLayout
            android:id="@+id/project_list_root"
            android:layout_width="match_parent"
            android:layout_height="80dp"
           >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/im_project_image"
                android:src="@android:drawable/ic_menu_edit"
                android:elevation="3dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/txt_project_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Project Name"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/im_project_image"
                android:layout_toEndOf="@+id/im_project_image"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:text="Issues "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_project_issues"
                android:paddingLeft="8dp"
                android:layout_alignBottom="@+id/im_project_image"
                android:layout_alignLeft="@+id/txt_project_name"
                android:layout_alignStart="@+id/txt_project_name" />

            <TextView
                android:text="Location "
                android:id="@+id/txt_project_location"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_project_issues"
                android:layout_alignLeft="@+id/txt_project_name"
                android:layout_alignStart="@+id/txt_project_name" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>